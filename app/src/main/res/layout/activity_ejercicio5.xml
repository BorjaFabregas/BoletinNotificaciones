<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabregas.boletin2.Ejercicio5">

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/operandoA"
        android:background="@android:color/background_light"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/operandoB"
        android:background="@android:color/background_light"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/operandoA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_height="40dp"
        android:id="@+id/opciones"
        android:background="@android:color/darker_gray"
        android:layout_width="120dp"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:entries="@array/opciones"
        android:layout_alignTop="@+id/operandoB"
        android:layout_toLeftOf="@+id/operandoB"
        android:layout_toStartOf="@+id/operandoB" />

    <TextView
        android:text="0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:id="@+id/resultado"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|bold"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="right"
        android:layout_below="@+id/operandoB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aceptar"
        android:text="OK"
        android:onClick="lanzar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

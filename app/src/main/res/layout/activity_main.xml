<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabregas.boletin2.MainActivity">

    <Button
        android:text="Experimento 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butExp2"
        android:layout_below="@+id/butExp1"
        android:layout_alignStart="@+id/butExp1" />

    <Button
        android:text="Experimento 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butExp3"
        android:layout_below="@+id/butExp2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Experimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:text="Experimento 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butExp1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ejercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/butExp3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ejercicio 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj4"
        android:layout_below="@+id/butEj3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ejercicio 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj5"
        android:layout_below="@+id/butEj3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ejercicio 7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj7"
        android:layout_below="@+id/butEj6"
        android:layout_alignEnd="@+id/butEj4" />

    <Button
        android:text="Ejercicio 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj2"
        android:layout_alignBaseline="@+id/butEj1"
        android:layout_alignBottom="@+id/butEj1"
        android:layout_alignStart="@+id/butEj5" />

    <Button
        android:text="Ejercicio 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj1"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/butExp3"
        android:layout_alignEnd="@+id/butEj4" />

    <Button
        android:text="Ejercicio 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj3"
        android:layout_alignBaseline="@+id/butEj2"
        android:layout_alignBottom="@+id/butEj2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Ejercicio 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butEj6"
        android:layout_below="@+id/butEj3"
        android:layout_alignParentEnd="true" />
</RelativeLayout>